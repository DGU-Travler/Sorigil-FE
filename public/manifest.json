{
  "background": {
    "service_worker": "background.js"
  },
  "manifest_version": 3,
  "version": "1.0.0",
  "short_name": "Sorigil",
  "description": "Sorigil - Screen Reader Extension",
  "name": "Sorigil",
  "permissions": ["storage", "tts", "tabs", "activeTab", "scripting"],
  "icons": {
    "128": "128.png"
  },
  "action": {
    "default_popup": "index.html"
  },
  "host_permissions": ["<all_urls>"],
  "display": "standalone",
  "theme_color": "#000000",
  "background_color": "#ffffff",
  "commands": {
    "start-voice-command": {
      "suggested_key": {
        "default": "Ctrl+Shift+X"
      },
      "description": "Start voice recognition"
    },
    "increase-volume": {
      "suggested_key": {
        "default": "Ctrl+Shift+1"
      },
      "description": "Volume up"
    },
    "decrease-volume": {
      "suggested_key": {
        "default": "Ctrl+Shift+2"
      },
      "description": "Volume down"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "all_frames": true
    }
  ]
}
